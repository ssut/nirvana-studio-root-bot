{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "incremental": true,
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "baseUrl": "./"
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
